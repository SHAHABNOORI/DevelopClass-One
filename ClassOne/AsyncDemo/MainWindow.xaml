<Window x:Class="AsyncDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncDemo"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="149*"/>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="44*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnNormalExecution" Content="Normal Execution" Margin="0,0,0,388" RenderTransformOrigin="0.487,-8.164" Click="Button_Click" Grid.ColumnSpan="3"/>
        <TextBlock x:Name="resultTextBox" TextWrapping="Wrap" Margin="10,189,-10,0" Grid.ColumnSpan="3"/>
        <Button x:Name="btnAsyncExecution" Content="Async Excution" Margin="0,69,0,319" RenderTransformOrigin="0.487,-8.164" Click="btnAsyncExecution_Click" Grid.ColumnSpan="3"/>
        <Button x:Name="btnSomeExecution" Content="Async Excution" Margin="0,143,0,245" RenderTransformOrigin="0.487,-8.164" Click="btnSomeExecution_Click" Grid.ColumnSpan="3"/>

    </Grid>
</Window>
